import matplotlib.pyplot as plt
import pandas as pd
dataframe = pd.read_csv("C:\\Users\\HP\\Desktop\\PYTHON\\Ambox\\Unidad 4\\titanic.csv")
sobrevivientes = dataframe[dataframe['Survived']==1]['Pclass'].value_counts().sort_index()
plt.bar(sobrevivientes.index, sobrevivientes.values)
plt.title("Supervivientes por clase")
plt.xlabel("Clase")
plt.ylabel("Cantidad")
plt.savefig("Titanic-ejercicio 1")
plt.show()
#sobrevivientes por edad
plt.hist(dataframe[dataframe['Survived']==1]['Age']. dropna(), bins=20)
plt.title("Supervivencia por edad")
plt.xlabel("Edad")
plt.ylabel("frecuencia")
plt.savefig("titanic-ejercicio-2")
plt.show()
#sobrevivientes por sexo
sexo=dataframe[dataframe["Survived"]==1]["Sex"].value_counts()
plt.pie(sexo,labels=sexo.index, autopct='%1.1f%%')
plt.title("Supervivencia por sexo")
plt.savefig("titanic-ejercicio-3")
plt.show()
#scatter entre tarifa y edad(color segun supervivencia)
plt.scatter(dataframe["Age"], dataframe["Fare"],c=dataframe["Survived"],cmap="viridis")
plt.xlabel("Edad")
plt.ylabel("Tarifa")
plt.title("Edad vs Tarifa (color segun supervivencia)")
plt.colorbar(label='0=No sobrevivio, 1=sobrevivio')
plt.savefig("titanic-ejercicio")
plt.show()
